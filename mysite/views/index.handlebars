<h2 class="mb-3">Convert</h2>
<form action="/" method="POST">
	<div class="form-group">
		<label>
		Amount:
		<input class="form-control" name="amount" type="number" step=0.01 min=0 value=0>
		</label>
	</div> <!-- form-group -->
	<div class="form-group">
		<label>
		Currency:
		<select class="form-control" name="baseCurrency">
			{{#each currencies}}
				<option>{{this}}</option>
			{{/each}}
		</select> <!-- form-control -->
		</label>
	</div> <!-- form-group -->
	<div class="form-group">
		<label>
			Target Currency:
			<select class="form-control" name="targetCurrency">
				{{#each currencies}}
					<option>{{this}}</option>
				{{/each}}
			</select> <!-- form-control -->
		</label>
	</div> <!-- form-group -->
	<input class="btn btn-primary" type="submit" value="Convert">
</form>
{{#if error}}
	<p class="alert-danger mt-5">{{error}}</p>
{{/if}}